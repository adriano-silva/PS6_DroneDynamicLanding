<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="ch.heia.ps6_dronedynamiclanding.MainActivity">

        <TextureView
            android:id="@+id/video_previewer_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true" />

        <ch.heia.ps6_dronedynamiclanding.BarcodeView
            android:id="@+id/bcView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="Stop"
            android:layout_margin="@dimen/btn_margin"
            android:textColor="@color/colorRed"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btn_map"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="Map"
            android:layout_margin="@dimen/btn_margin"
            android:textSize="12sp"/>

    <ToggleButton
        android:id="@+id/btn_mode"
        android:layout_width="@dimen/tgglbtn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/btn_margin"
        android:layout_toLeftOf="@+id/btn_map"
        android:text="Change Mode"
        android:textOff="Follow mode"
        android:textOn="Land mode"
        android:textSize="12dp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/video_previewer_surface"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>